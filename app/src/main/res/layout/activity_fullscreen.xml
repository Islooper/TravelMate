<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:textColor="#33b5e5"
        android:textSize="50dp"
        android:textStyle="bold" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:fontFamily="@font/montserrat"
            android:text="智慧旅游-四季庭"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white"
            android:textSize="36sp" />

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="640dp" />

        <com.iothinking.travelmate.AutoScrollTextView
            android:id="@+id/textView4"
            android:textSize="20sp"
            android:text="@string/scenic_desc"
            android:layout_width="wrap_content"
            android:layout_height="30dp">

        </com.iothinking.travelmate.AutoScrollTextView>

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/p1"
            android:visibility="invisible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="2dp"></androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/airscape" />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="2.5"
                android:background="@drawable/ewma_bg"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="185dp">

                <TextView
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="扫码自助购票"
                    android:layout_width="match_parent"
                    android:layout_height="20sp">

                </TextView>

                <TextView
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="请使用微信/支付宝付款"
                    android:layout_width="match_parent"
                    android:layout_height="20sp">

                </TextView>

                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </ImageView>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginRight="10dp"
                android:background="@drawable/bg3"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

<!--                第一行-->
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/big_icon_01"
                        android:layout_width="40dp"
                        android:layout_height="40dp">

                    </ImageView>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#fff"
                        android:text="当前游客:200人"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>



<!--                第二行-->
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_01"
                        android:layout_width="20dp"
                        android:layout_height="20dp">

                    </ImageView>
                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:text="当前游玩人数"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:text="2000人次"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>

<!--                第三行-->
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_02"
                        android:layout_width="20dp"
                        android:layout_height="20dp">

                    </ImageView>
                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:text="购票次数"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:text="2000人次"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>


<!--                第四行-->
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_03"
                        android:layout_width="20dp"
                        android:layout_height="20dp">

                    </ImageView>
                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:text="可用车位"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:text="300个"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <!--                第一行-->
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/big_icon_02"
                        android:layout_width="40dp"
                        android:layout_height="40dp">

                    </ImageView>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#fff"
                        android:text="天气：晴"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>



                <!--                第二行-->
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_04"
                        android:layout_width="20dp"
                        android:layout_height="20dp">

                    </ImageView>
                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:text="温度"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:text="12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>

                <!--                第三行-->
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_05"
                        android:layout_width="20dp"
                        android:layout_height="20dp">

                    </ImageView>
                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:text="风力"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:text="1级"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>


                <!--                第四行-->
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_06"
                        android:layout_width="20dp"
                        android:layout_height="20dp">

                    </ImageView>
                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:text="空气质量"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:text="好"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="horizontal">-->


<!--            <ImageView-->
<!--                android:id="@+id/imageView2"-->
<!--                android:layout_width="220dp"-->
<!--                android:layout_height="220dp"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:scaleType="fitXY"-->
<!--                app:srcCompat="@drawable/buyticket" />-->
<!--        </LinearLayout>-->
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="false">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/dummy_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dummy_button" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>